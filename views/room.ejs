    <script src="simplify-svg-path.js" defer></script>
    <script src="simplify.js" defer></script>
    <script src="panzoom.min.js" defer></script>
    <script src="pan.js" defer></script>
    <script src="functions.js" defer></script>
    <script src="settings.js" defer></script>
    <script src="draw.js" defer></script>
