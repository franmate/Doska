<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="assets/styles.css">
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="jquery-3.6.0.min.js" defer></script>
    <script src="fabric.min.js" defer></script>
    <script src="main.js" defer></script>
    <script src="pan.js" defer></script>
    <script>
        const ROOM_ID = "<%= roomId %>"
    </script>
    <!-- <script>
        const username = window.prompt("Hello! Type your name:");
        socket.emit('new user', username);
    </script> -->
    <title>List</title>
    <link rel="icon" href="assets/favicon.svg">
</head>
<body class="body">
    <!-- <div id="waitShield">
        <p id="waitMessage">Please wait</p>
    </div> -->

    <div class="container unreachable">

        <div id="canvasWrapper">
            <canvas id="c" style="position: relative; top: 0; bottom: 0; left: 0; right: 0; z-index: 2;"></canvas>
        </div>

        <div style="width: 128px; position: fixed; top: 0px; left: 0px; z-index: 10; transform: scale(0.5); cursor: pointer;">
            <img src="assets/joystick/joystick-base.png"/>
            <div id="stick" style="position: absolute; left:32px; top:32px;">
            <img src="assets/joystick/joystick-blue.png"/>
            </div>
        </div>

        <div class="dockPanel">
            <div class="main-tools">
                <div class="tools canvasHistory">
                    <button type="button" class="undo" onclick="undo(), goPostman('undo')"></button>
                    <button type="button" class="redo" onclick="redo(), goPostman('redo')"></button>
                </div>
                <div class="tools brushSection">
                    <button type="button" class="select" id="select" onclick="changeAction(this)"></button>
                    <button type="button" class="pen" id="brush" onclick="changeAction(this)"></button>
                    <button type="button" class="eraser" id="erase" onclick="changeAction(this)"></button>
                    <button type="button" class="clear" onclick="clearCanvas(), goPostman('clear')"></button>
                </div>
                <!-- <div class="tools canvasControlls">
                    <input name="file" type="file" id="uploader" accept="image/png, image/gif, image/jpeg"/>
                    <label for="uploader" class="uploader-button"></label>
                </div> -->
                <div class="tools brushSettings">
                    <button class="colors"></button>
                    <button class="size"></button>
                    <button class="paper"></button>
                </div>
            </div>
            <div class="tools brushSize size-btns">
                <button class="small" onclick="setBrush({width: 3})"></button>
                <button class="middle active" onclick="setBrush({width: 5})"></button>
                <button class="big" onclick="setBrush({width: 10})"></button>
            </div>
            <div class="tools brushColors color-btns">
                <button class="color-bt black active" data-value="#000000"></button>
                <button class="color-bt red" data-value="#D01919"></button>
                <button class="color-bt yellow" data-value="#EAAE00"></button>
                <button class="color-bt green" data-value="#16AB39"></button>
                <button class="color-bt blue" data-value="#1678C2"></button>
                <input type="color" class="button color-input" id="brushColor">
            </div>
            <div class="tools canvasBackground bcgr-btns">
                <button class="none active"></button>
                <button class="sq"></button>
                <button class="line"></button>
                <button class="dot"></button>
            </div>
        </div>
    </div>
</body>
</html>